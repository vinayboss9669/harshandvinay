
//this page add on pages folder and create a features.jsx
import React from 'react';
import { useNavigate } from 'react-router-dom';
import styled from 'styled-components';

const Features = () => {
  const navigate = useNavigate();

  const handleGeneratePassword = () => {
    navigate('/generate');
  };

  const handleBreachCheck = () => {
    navigate('/breach');
  };

  const handleStrengthCheck = () => {
    navigate('/strength');
  };

  const handleLogin = () => {
    navigate('/login');
  };

  return (
    <FeatureWrapper>
      <h1>Feature Page</h1>
      <button className="button" onClick={handleGeneratePassword}>
        Generate Password
      </button>
      <button className="button" onClick={handleBreachCheck}>
        Breach Check
      </button>
      <button className="button" onClick={handleStrengthCheck}>
        Password Strength Check
      </button>
      <button className="button" onClick={handleLogin}>
        Login
      </button>
    </FeatureWrapper>
  );
};

const FeatureWrapper = styled.div`
  text-align: center;
  padding-top: 100px;
      background-color: rgba(255, 255, 255, 0.05);
  min-height: 100vh;

  h1 {
    margin-bottom: 40px;
    margin-top:5px;
    opacity: 0.8; 
        color:white;
    font-size:100px;
    //   background-color: rgba(255, 255, 255, 0.05);

  }

  .button {
    display: block;
    margin: 15px auto;
    padding: 15px 30px;
    font-size: 16px;
    background-color: brown;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.3s;
    width: 220px;

    &:hover {
      background-color: #45a049;
    }
  }
`;

export default Features;
