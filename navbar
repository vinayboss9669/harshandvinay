
//this page code paste on navbar

import React from 'react';
import { useAuth } from '../contexts/AuthContext';
import { Link, useNavigate } from 'react-router-dom';

function Nabvar() {
  const { user, logout } = useAuth();
  const navigate = useNavigate();

  const handleLogout = async () => {
    try {
      await logout();
      navigate('/login');
    } catch (error) {
      console.error('Failed to logout:', error);
    }
  };

  return (
    <>
      <div className="nabvar flex flex-wrap justify-between bg-black/30 backdrop-blur items-center p-2">
        <li className='list-none p-2 m-2 text-2xl'><Link to="/">G-secure</Link></li>
        <li className='list-none p-2 m-2 w-12'>
          <a href="https://github.com/devPeers" target='_blank' rel="noopener noreferrer">
            <img src="/public/github.png" alt="GitHub" className="w-full h-auto" />
          </a>
        </li>
        <div className="flex flex-wrap items-center gap-2">
          { (
            <>
              <Link 
                to="/vault" 
                className='list-none px-4 py-2 text-sm md:text-base rounded bg-yellow-950 hover:bg-amber-800 transition-all duration-300 
                transform hover:scale-105 active:scale-95 whitespace-nowrap'
              >
                Vault
              </Link>
              <button 
                onClick={handleLogout}
                className='list-none px-4 py-2 text-sm md:text-base rounded bg-yellow-950 hover:bg-amber-800 transition-all duration-300 
                transform hover:scale-105 active:scale-95 whitespace-nowrap'
              >
                Logout
              </button>
            </>
          )}
        </div>
      </div>
    </>
  );
}

export default Nabvar;
